    <AdapterViewFlipper
        android:id="@+id/proverbsAdapterViewFlipper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/Verguideline15"
        app:layout_constraintTop_toBottomOf="@id/adView1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinehor80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelinehor10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <Button
        android:id="@+id/previousButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:onClick="previous"
        android:padding="10dp"
        android:text="PREVIOUS"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/Horguideline40"
        app:layout_constraintEnd_toStartOf="@+id/Verguideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Horguideline20" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:onClick="next"
        android:padding="5dp"
        android:text="NEXT"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/Horguideline95"
        app:layout_constraintEnd_toEndOf="@id/Verguideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Horguideline80" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:src="@drawable/ic_pause_circle_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/Horguideline80"
        app:layout_constraintEnd_toEndOf="@id/Verguideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Horguideline60" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:src="@drawable/ic_play_circle_outline_black_24dp"
        app:layout_constraintBottom_toBottomOf="@id/Horguideline80"
        app:layout_constraintEnd_toEndOf="@id/Verguideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Horguideline60" />

    <ImageButton
        android:id="@+id/ivUnMuteButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:src="@drawable/ic_mute"
        app:layout_constraintBottom_toBottomOf="@id/Horguideline60"
        app:layout_constraintEnd_toEndOf="@id/Verguideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Horguideline40" />

    <ImageButton
        android:id="@+id/ivMuteButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:padding="10dp"
        android:src="@drawable/ic_unmute"
        app:layout_constraintBottom_toBottomOf="@id/Horguideline60"
        app:layout_constraintEnd_toEndOf="@id/Verguideline15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Horguideline40" />


