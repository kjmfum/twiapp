<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/proverbTwitext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue3"
            android:gravity="center"
            android:onClick="proverbClick"
            android:text="Testing Twi" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline30" >

        <TextView
            android:id="@+id/proverbLiteralEnglish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFE082"
            android:gravity="center"
            android:text="Testing English" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline60" >

        <TextView
            android:id="@+id/proverbMeaningEnglish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80DEEA"
            android:ems="10"
            android:gravity="center"
            android:text="Testing Meanining" />


    </androidx.cardview.widget.CardView>

