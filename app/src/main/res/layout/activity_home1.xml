    <ImageView
        android:id="@+id/homeAdvertButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/ghanaflag"
        app:layout_constraintEnd_toEndOf="@+id/guideline21"
        app:layout_constraintBottom_toTopOf="@id/guideline15"
        app:layout_constraintStart_toStartOf="@id/guideline30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:srcCompat="@drawable/learnakantwi" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideline15"
        app:layout_constraintBottom_toBottomOf="@id/guideline20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold|italic"
        android:text="@string/purchase_or_subscribe_banner"
        android:gravity="center"
        android:background="@color/colorGreen"
        android:onClick="goToSubscriptionPage"
        />


